    <div class="container-fluid">
        <h2 style="text-align: center;">ONLINE RESERVATION SYSTEM</h2>
        <% if(welcome_msg !== ''){%>
            <div class='container alert alert-info alert-dismissible' style="width: fit-content; color:darkorange; font-size: large;">
                <%- welcome_msg %>
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            </div>
            <%}%>
                <div class="row">
                    <div class="col-7">
                        <!-- <img src="../images/hotel8.jpg" style="width: 100%; height: 100%;"> -->
                        <div class="container">
                            <p>In CIDUSFACE we make home out of strangers. customer comfortabiity is our priority</p>
                            <b style="font-size: x-large;">Fill in appropriately to create account and become a VIP customer.</b>
                        </div>
                    </div>
                    <div class="col-5" style=" border: chartreuse;">
                        <div id="message">
                            <h3>Password must contain the following:</h3>
                            <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                            <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                            <p id="number" class="invalid">A <b>number</b></p>
                            <p id="length" class="invalid">Minimum <b>8 characters</b></p>
                        </div>

                        <div class="card">
                            <div class="card-header" style="text-align: center;">
                                <h2>Registeration Form</h2>
                                <p><b style="color:red;">All fields are required!!</b>
                                </p>
                            </div>
                            <div class="card-body">
                                <!-- messages here -->
                                <div>
                                    <% if(errors !== ''){%>
                                        <% errors.forEach(function(item){%>
                                            <div class='alert alert-danger'>
                                                <%- item %>
                                            </div>
                                            <%})%>
                                                <%}%>
                                </div>
                                <form action="/register" method="POST">
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control" id="name" name="name" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="address">Address</label>
                                        <input type="text" class="form-control" id="address" name="address" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="phone_number">Phone Number</label>
                                        <input type="text" class="form-control" id="mobile" name="phone_number" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="sex">Sex</label>
                                        <select type="text" class="form-control" id="sex" name="sex" required>
                          <option>Male</option>
                          <option>Female</option>
                      </select>
                                    </div>
                                    <div class="form-group row">
                                        <label for="password">Password</label>
                                        <div class="col-sm-11">
                                            <input type="password" class="form-control" id="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{7,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 7 or more characters" required>
                                        </div>
                                        <div class="col-sm-1"><i class="fa fa-eye" onclick="showPassword()"></i></div>
                                    </div>
                                    <div class="form-group">
                                        <label for="passwordConfirm">Comfirm Password</label>
                                        <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm">
                                    </div>
                                    <hr>
                                    <button type="submit" class="btn btn-primary">Register</button>
                                    <div style="font-style: oblique;"><br>
                                        <p>Already having an account with us? Please <a href="/login">log in</a> here!</p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
    </div>

