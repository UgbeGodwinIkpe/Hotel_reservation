            <button class="btn" style="color: whitesmoke; font-size: large;">Logout</button>
        </form>
    </nav>
    <!-- Mobile navbar -->
    <div class="mobile-container mobile-nav" style="background-color: rgba(0, 0, 0, 0.534) !important;">
        <div class="topnav">
            <a href="#home" class="active">CIDUSFACE HOTEL</a>
            <a href="#" style="color: blanchedalmond !important;">Booking</a>
            <a href="javascript:void(0)" class="icon" onclick="myFunction()"><i class="fa fa-bars"></i></a>
            <div id="myLinks">
                <a href="/">Home</a>
                <a href="/dashboard">Dashboard</a>
                <a href="/innerview">Check Innerview</a>

            </div>

        </div>
    </div>

    <div class="container-fluid">
        <% if(msg !== ''){%>
            <div class='container alert alert-info alert-dismissible' style="width: fit-content; color:darkorange; font-size: large;">
                <%-msg %>
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            </div>
            <%}%>
                <div class="row">
                    <div class="col-7">
                        <img src="../images/hotel9.jpg" style="width: 100%; height: 100%;">
                    </div>
                    <div class="col-5">

                        <div class="card">
                            <div class="card-header">
                                <p>Continue to pay with card</p>
                            </div>
                            <div class="card-body">
                                <!-- Error messages here -->
                                <form method="POST" id="bookingForm">
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control" id="name" name="cust_name" value="<%=user.cust_name %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="mobile">Phone Number</label>
                                        <input type="text" class="form-control" id="mobile" name="mobile" value="<%= user.mobile%>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="address">Address</label>
                                        <input type="text" class="form-control" id="address" name="address" value="<%= user.address%>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email%>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="nRooms">Number of Rooms</label>
                                        <input type="number" class="form-control" id="nRooms" name="nRooms" value="<%= user.nRooms%>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="amount">Amount(N)</label>
                                        <input type="number" class="form-control" id="amount" name="amount" value="<%= user.amount%>" required>
                                    </div>
                                    <hr>
                                    <div class="pulled-right">
                                        <button type="submit" class="btn btn-primary">Continue</button>
                                    </div>
                                </form>
                                <hr>
                                <form action="/payThere" method="POST">
                                    <button type="submit" class="btn btn-success">No I will pay when I come</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
    </div>
    <script src="https://checkout.flutterwave.com/v3.js"></script>
    <script src="/script.js"></script>

